#include <stdio.h>

// Define a structure named 'Person'
struct Person {
    char name[50];
    int age;
    float height;
};

int main() {
    // Declare variables of type 'Person'
    struct Person person1, person2;

    // Input information for person1
    printf("Enter details for person1:\n");
    printf("Name: ");
    scanf("%s", person1.name);  // Assuming no spaces in the name
    printf("Age: ");
    scanf("%d", &person1.age);
    printf("Height (in cm): ");
    scanf("%f", &person1.height);

    // Input information for person2
    printf("\nEnter details for person2:\n");
    printf("Name: ");
    scanf("%s", person2.name);  // Assuming no spaces in the name
    printf("Age: ");
    scanf("%d", &person2.age);
    printf("Height (in cm): ");
    scanf("%f", &person2.height);

    // Display information for both persons
    printf("\nDetails for person1:\n");
    printf("Name: %s\n", person1.name);
    printf("Age: %d\n", person1.age);
    printf("Height: %.2f cm\n", person1.height);

    printf("\nDetails for person2:\n");
    printf("Name: %s\n", person2.name);
    printf("Age: %d\n", person2.age);
    printf("Height: %.2f cm\n", person2.height);

    return 0;
}
